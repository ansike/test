body,
ul,
li,
dl,
dt,
dd,
p,
ol,
h1,
h2,
h3,
h4,
h5,
h6,
form,
img,
table,
fieldset,
legend {
    margin: 0;
    padding: 0;
}

ul,
li,
ol {
    list-style: none;
}

img,
fieldset {
    border: 0;
}

img {
    display: block;
}

a {
    text-decoration: none;
    color: #333;
}

h1,
h2,
h3,
h4,
h5,
h6 {
    font-weight: 100;
}

body {
    font-size: 12px;
    font-family: "Microsoft Yahei";
}

input,
a {
    outline: none;
}

body,
html {
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.fl {
    float: left;
}

.fr {
    float: right;
}

.container {
    width: 100%;
    height: 100%;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    font-size: .12rem;
    .header {
        width: 100%;
        height: 1rem;
        line-height: 1rem;
        border-bottom: solid 1px #ccc;
        flex-shrink: 0;
        background: #3A3A3B;
        color: white;
        .mybookrack {
            margin-left: .4rem;
            font-size: .3rem;
        }
        .myadd {
            margin-right: .2rem;
            font-size: .5rem;
        }
        .mysearch {
            margin-right: .2rem;
            font-size: .26rem;
            margin-top: .06rem;
        }
    }
    .contain {
        width: 100%;
        overflow-y: auto;
        flex-grow: 1;
    }
    .footer {
        width: 100%;
        height: 1rem;
        border-top: solid 1px #ccc;
        flex-shrink: 0;
        .nav {
            height: 100%;
            display: flex;
            flex-direction: row;
            justify-content: space-around;
            .navChoice {
                width: 25%;
                height: 100%;
                font-size: .2rem;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                .nav_icon{
                  font-size: .4rem;
                }
            }
            .navActive {
                color: #19A2DD;
            }
        }
    }
}
